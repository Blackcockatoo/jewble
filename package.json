{
  "name": "jewble-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "meta-pet",
    "meta-pet-mobile",
    "apps/web-vite",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace meta-pet",
    "dev:vite": "npm run dev --workspace apps/web-vite",
    "dev:mobile": "npm run start --workspace meta-pet-mobile",
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build --workspace meta-pet",
    "build:vite": "npm run build --workspace apps/web-vite",
    "lint": "npm run lint --workspaces --if-present",
    "lint:web": "npm run lint --workspace meta-pet",
    "test:web": "npm run test --workspace meta-pet"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17"
  }
}
